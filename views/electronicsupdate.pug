extends layout

block content
  h1= title
  - let electronicsid = toShow._id
  - let Gadget = toShow.Gadget
  - let Price = toShow.Price
  - let Storage = toShow.Storage
  
  div.row(class='mb-2')
    div.mr-1 ID is
    div #{electronicsid}
  
  - let actionid = "/resource/electronics/" + electronicsid
  form(id='electronicsForm', action= actionid, method="PUT", style='max-width: 400px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px; background-color: #f9f9f9;')
    div.form-group
      label.electronicsAttr(for='Gadget', style='display: block; font-weight: bold; margin-bottom: 5px;') Gadget
      input#Gadget(type='text', name='Gadget', value= Gadget, style='width: calc(100% - 12px); padding: 10px; border: 1px solid #ccc; border-radius: 4px;')
    div.form-group
      label.electronicsAttr(for='Price', style='display: block; font-weight: bold; margin-bottom: 5px;') electronics Price
      input#Price(type='text', name='Price', value= Price, style='width: calc(100% - 12px); padding: 10px; border: 1px solid #ccc; border-radius: 4px;')
    div.form-group
      label.electronicsAttr(for='Storage', style='display: block; font-weight: bold; margin-bottom: 5px;') electronics Storage 
      input#Storage(type='number', name='Storage', value= Storage, style='width: calc(100% - 12px); padding: 10px; border: 1px solid #ccc; border-radius: 4px;')
      input(type="submit", style='padding: 10px 15px; border: none; border-radius: 4px; background-color: #007bff; color: white; cursor: pointer; transition: background-color 0.3s;')
  div(class="container-fluid")
div(class="row m-1")
    each item in items
        - let destination = `dispatch(\"/electronics/update?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.Gadget}(#{item.Price}) is #{item.Storage}
        button.btn(class="btn-primary ml-1", onclick=destination) Update
script.
    function dispatch(path){
        window.location.href=path
    }
