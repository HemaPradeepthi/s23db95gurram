extends layout

block content
  h1= title
  - let item = results
  .container-fluid 
      .row
        each electr, index in item
            .col-sm-2(onclick=`buy(${index})`)
              p Gadget: #{electr.Gadget}
              p Price : #{electr.Price}
              p Storage: #{electr.Storage}
  script.
    function buy(index) {
      alert(`you purchased item ${index}`);
    }
          

  