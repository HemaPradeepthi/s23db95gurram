extends layout
 
block content
  h1= title
  - let items = results
  - let destination = `/Electronics/create`
  button.btn( class="btn-primary ml-1", onclick= `dispatch("${destination}")`) Create New Electronics Item
  div(class="container-fluid")
    div(class="row")
      each Electronics, index in results
        div(class="col-sm-2", onclick=`buy(${index})`) #{Electronics.Gadget}, #{Electronics.Price}, #{Electronics.Storage}
        - let destination1 = `/Electronics/update?id=${Electronics._id}` // Fix variable name and template string
        - let destination2 = `/Electronics/detail?id=${Electronics._id}` // Fix variable name and template string
        - let destination3 = `/Electronics/delete?id=${Electronics._id}` // Fix variable name and template string
        div(class="col-sm-2", onclick=`buy(${Electronics})`) #{Electronics.Gadget}, #{Electronics.Price}, #{Electronics.Storage}
        button.btn(class="btn-success ml-1", onclick=`dispatch('${destination1}')`) Update
        button.btn(class="btn-secondary ml-1", onclick=`dispatch('${destination2}')`) Detail
        button.btn(class="btn-warning ml-1", onclick=`dispatch('${destination3}')`) Delete
  script.
    function buy(a) {
      alert(`You purchased Item ${results[a].Gadget}`); // Fix the alert message
    }
 
    function dispatch(path) {
      window.location.href = path;
    }
 
 